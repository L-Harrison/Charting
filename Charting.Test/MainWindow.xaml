<Window x:Class="Charting.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:charting="clr-namespace:Charting;assembly=Charting"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Charting.Test"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <!--<RowDefinition/>-->
        </Grid.RowDefinitions>
        <charting:OscillogramCharting CurrentTimeIndex="{Binding CurrentTime}"
                                      GradientRealX="{Binding GradientRealX, Mode=TwoWay}"
                                      GradientRealY="{Binding GradientRealY, Mode=TwoWay}"
                                      GradientX="{Binding GradientX, Mode=TwoWay}"
                                      GradientY="{Binding GradientY, Mode=TwoWay}"
                                      LastTimeIndex="{Binding LastTime, Mode=TwoWay}"
                                      PressureX="{Binding PressureX, Mode=TwoWay}"
                                      PressureY="{Binding PressureY, Mode=TwoWay}"
                                      SpeedRealX="{Binding SpeedRealX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SpeedRealY="{Binding SpeedRealY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SpeedX="{Binding SpeedX, Mode=TwoWay}"
                                      SpeedY="{Binding SpeedY, Mode=TwoWay}" />
        <!--<charting:OscillogramChartingCore Grid.Row="1" />-->
    </Grid>
</Window>
